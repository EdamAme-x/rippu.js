{
  "name": "rippu",
  "description": "Components for building Beautiful TUI in Ink.js ðŸ’„",
  "version": "0.1.10",
  "license": "MIT",
  "keywords": [
    "ink.js",
    "ink",
    "tui",
    "react",
    "rippu",
    "lipgloss",
    "rippu.js",
    "rippu-js"
  ],
  "module": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build:start": "rimraf dist",
    "build:middle": "bun run ./build.tsx",
    "build:end": "cp ./package.json ./dist/package.json && cp ./README.md ./dist/README.md && cp ./node_modules/yoga-wasm-web/dist/yoga.wasm ./dist/yoga.wasm",
    "build": "bun run build:start && bun run build:middle  && bun run build:end",
    "format": "prettier --check './**/*.{ts,tsx,js,jsx}'",
    "format:fix": "prettier --write './**/*.{ts,tsx,js,jsx}'",
    "lint": "eslint --ext js,ts,jsx,tsx cli components",
    "lint:fix": "eslint --ext js,ts,jsx,tsx cli components --fix"
  },
  "author": {
    "name": "Ame_x",
    "url": "https://github.com/EdamAme-x",
    "email": "admin@ame-x.net"
  },
  "bugs": {
    "url": "https://github.com/EdamAme-x/rippu.js/issues"
  },
  "repository": {
    "url": "https://github.com/EdamAme-x/rippu.js"
  },
  "bin": "./dist/index.js",
  "devDependencies": {
    "@hono/eslint-config": "^0.0.6",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bun": "latest",
    "@types/ink": "^2.0.3",
    "@types/react": "^18.3.3",
    "cp": "^0.2.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.55.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "prettier": "^3.3.2",
    "react-devtools-core": "^5.3.1",
    "rimraf": "^6.0.0",
    "tsc": "^2.0.4",
    "yoga-wasm-web": "^0.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "enogu": "^0.4.1",
    "ink": "^5.0.1",
    "react": "^18.3.1"
  }
}
