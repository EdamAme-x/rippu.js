{
	"useTabs": true,
	"parser": "typescript",
	"quoteProps": "as-needed",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"proseWrap": "preserve",
	"printWidth": 100,
	"trailingComma": "es5",
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "css",
	"vueIndentScriptAndStyle": false,
	"embeddedLanguageFormatting": "auto",
	"singleAttributePerLine": false,
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"<THIRD_PARTY_MODULES>",
		"",
		"^[./]"
	],
	"importOrderParserPlugins": [
		"typescript",
		"jsx",
		"decorators-legacy"
	],
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports"
	]
}